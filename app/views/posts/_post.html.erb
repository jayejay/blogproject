<div class="card card-plain card-blog">
  <div class="row">

    <div class="col-md-4">
      <div class="card-image">
        <%= image_tag post.image_url, class: 'img img-raised'%>
      </div>
    </div>

    <div class="col-md-8">
      <h6 class="category text-info"><%= post.category.name %></h6>
      <h3 class="card-title">
        <a href="<%= post_path(post.id) %>"><%= post.title %></a>
      </h3>
      <p class="card-description">
        <%= truncate_html(post.content, length: 200, omission: '...' )%>
        <%= link_to 'weiterlesen', post, class: 'btn btn-info btn-sm' %>
      </p>
      <p class="author">
        von <a href="#"><b><%= post.user.nick_name %></b></a>,
        <% unless post.published_at.nil?  %>
            <%= post.published_at.strftime('%d.%m.%Y') %>
        <% else %>
            <%= post.created_at.strftime('%d.%m.%Y') %>
        <% end %>
        </a>
      </p>
      <!--Post-Tags-->
      <% post.tags.each do |tag| %>
        <%= link_to tag.name, tag, class:'btn btn-round btn-xs',\
            style: 'background-color:' + tag.color %>
      <% end  %>
      <% if user_signed_in? && current_user.admin? %>
          <hr>
          <%#= link_to 'Edit', edit_post_path(post), class:'btn btn-default' %>
          <a href="<%= edit_post_path(post) %>" class="btn btn-default">
          <i class="material-icons">edit</i></a>
          <%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },\
            class: 'btn btn-danger'%>
          <a href="<%= edit_post_path(post) %>" class="btn btn-danger">
            <i class="material-icons">delete</i></a>

      <% end %>
    </div>




  </div>

</div>
<hr>
