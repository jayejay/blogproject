<p id="notice"><%= notice %></p>

<div class="row">
  <%= image_tag @post.image_url.url, class: 'post_main_image thumbnail' %>
  <h3><%= @post.title %></h3>
  <p><%= @post.content.html_safe %></p>
</div>

<div class="row">
  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
  <% end %>

  <%= link_to 'Back', posts_path %>
</div>
<div class="row">
  <%= render "comments/new_comment" %>
</div>