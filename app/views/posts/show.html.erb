<div class="row">
  <%= image_tag @post.image_url.url, class: 'img img-raised post_main_image' %>
  <p class="author">
    <i class="material-icons">face</i><a href="#"><b><%= @post.user.nick_name %></b></a>
    <i class="material-icons">access_time</i><% unless @post.published_at.nil?  %>
        <%= @post.published_at.strftime('%d.%m.%Y') %>
    <% else %>
        <%= @post.created_at.strftime('%d.%m.%Y') %>
    <% end %>

  </p>
  <hr>
  <h6 class="category text-info"><%= @post.category.name %></h6>
  <%= content_tag(:h3,@post.title, class: 'title') %>
  <%= content_tag(:div, @post.content.html_safe, class: 'blog-text') %>
  <hr>
  <% @post.tags.each do |tag| %>
      <a href="<%= tag_path(tag) %>" class="btn btn-success btn-xs"
         style="background-color:<%= tag.color %>; color:<%= tag.text_color %>"><%= tag.name  %></a>
  <% end %>

</div>

<% if @post.get_rating_total > 1  %>
  <div id="rating" class="row thumbnail">
      <h3>Review</h3>
      <table class="table table-striped rating-table">
        <tr>
          <td>Gameplay</td>
          <td><%= image_tag 'rating/'+ @rating.gameplay.to_s + '.png', class: 'img-responsive rating-image' %></td>
        </tr>
        <tr>
          <td>Graphics</td>
          <td><%= image_tag 'rating/'+ @rating.graphics.to_s + '.png', class: 'img-responsive rating-image' %></td>
        </tr>
        <tr>
          <td>Sound</td>
          <td><%= image_tag 'rating/'+ @rating.sound.to_s + '.png', class: 'img-responsive rating-image' %></td>
        </tr>
        <tr>
          <td>Innovation</td>
          <td><%= image_tag 'rating/'+ @rating.innovation.to_s + '.png', class: 'img-responsive rating-image' %></td>
        </tr>
        <tr>
          <td>Price-Performance</td>
          <td><%= image_tag 'rating/'+ @rating.price_performance.to_s + '.png', class: 'img-responsive rating-image' %></td>
        </tr>
        <tr>
          <td><strong>Total</strong></td>
          <td><%= image_tag 'rating/'+ @post.get_rating_total.to_s + '.png', class: 'img-responsive total-rating-image' %></td>
        </tr>
      </table>
  </div>
<% end %>

<div class="row">
  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %> |
  <% end %>
  <%= link_to 'Back', :back, class: 'btn btn-default' %>
</div>

