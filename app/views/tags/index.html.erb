<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag, class:'btn btn-success btn-xs btn-round',\
            style: 'background-color:'+ tag.color %></td>
        <% if user_signed_in? && current_user.admin?  %>
          <td><%= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


