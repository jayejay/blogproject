<div class="content_wrapper">
  <div class="row">
    <div class="col-md-12">
      <h2 class="title">Über uns</h2>
      <p>
        Hier steht ein bisschen allgemeiner Stuff über die Sporting Nerds...
        wieso weshalb und warum und so bla bla
      </p>
    </div>
  </div>
  <hr>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-6">
        <div class="card card-profile card-plain">
          <div class="card-avatar">
            <!--<a href="#pablo">-->
              <img class="img" src="<%= image_path(user.image_url) %>" />
            <!--</a>-->
          </div>

          <div class="content">
            <h4 class="card-title" style="color:<%= user.text_color %>">
              <%= user.nick_name %>
            </h4>
            <h6 class="category text-muted"><%= user.function %></h6>

            <p class="card-description">
              <%= user.description.html_safe %>
            </p>
            <div class="footer">
              <!--<a href="#pablo" class="btn btn-just-icon btn-simple btn-twitter"><i class="fa fa-twitter"></i></a>
              <a href="#pablo" class="btn btn-just-icon btn-simple btn-facebook"><i class="fa fa-facebook-square"></i></a>
              <a href="#pablo" class="btn btn-just-icon btn-simple btn-google"><i class="fa fa-google"></i></a>-->
              <hr>
              <% if user_signed_in? && current_user.admin? %>
                <%= link_to raw('<i class="material-icons">person</i>'), user, class: 'btn btn-info btn-sm' %>
                <%= link_to raw('<i class="material-icons">edit</i>'), edit_user_path(user), class: 'btn btn-warning btn-sm' %>
                <%= link_to raw('<i class="material-icons">close</i>'), user, method: :delete, data: { confirm: 'Are you sure?' },\
                class: 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>