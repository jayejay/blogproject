<p id="notice"><%= notice %></p>

<h1>Benutzer</h1>
<div class="table-responsive">
  <table id="table-user-index" class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Nick name</th>
        <th>Admin</th>
        <th>Moderator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.nick_name %></td>
          <td><%= user.admin %></td>
          <td><%= user.moderator %></td>
          <td>
            <%= link_to raw('<i class="material-icons">person</i>'), user, class: 'btn btn-info btn-sm' %>
            <%= link_to raw('<i class="material-icons">edit</i>'), edit_user_path(user), class: 'btn btn-warning btn-sm' %>
            <%= link_to raw('<i class="material-icons">close</i>'), user, method: :delete, data: { confirm: 'Are you sure?' },\
              class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
