<h3>Search</h3>

<%=	 form_tag('/posts', method:'get', class:'form-group', role:'search') do %>
    <%=	text_field_tag(:q, nil, class:'form-control') %>
    <%= submit_tag("suchen", class:'btn btn-default')%>
<% end %>
<%= image_tag image_path('trennstrich.png'), class: 'separator img-responsive' %>
<h3>Tags</h3>
  <table>
    <% Tag.joins(:posts).group('tags.id').order('COUNT(*) DESC').each do |t| %>
      <tr>
        <td><%= link_to t.name + ' (' + t.posts.count.to_s + ')', tag_path(t.id) %></td>
      </tr>
    <% end %>
  </table>
<%= link_to '...mehr', tags_path %>

<%= image_tag image_path('trennstrich.png'), class: 'separator img-responsive' %>

<div class="">
  <h3>Neuester Beitrag</h3>
  <% post = Post.where(active: true).last %>
  <% unless post.nil?%>
    <h4><%= post.title %></h4>
    <%#= image_tag post.image_url, class:'new_post_image' %>
    <%= truncate_html(post.content, length: 150, omission: '...')  %>
    <%= link_to 'weiterlesen', post_path(post.id) %>
  <% end %>

</div>