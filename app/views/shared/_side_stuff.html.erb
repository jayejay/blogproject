<h3>Search</h3>

<%=	 form_tag('/posts', method:'get', class:'form-group', role:'search') do %>
    <%=	text_field_tag(:q, nil, class:'form-control') %>
    <%= submit_tag("Search", class:'btn btn-default')%>
<% end %>

<h3>Tags</h3>
<% Tag.first(10).each do |t| %>
    <%#= t.name %>
    <%= link_to t.name, tag_path(t.id) %>
<% end %>
<%= link_to 'more', tags_path %>
