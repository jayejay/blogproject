<h2 class="title">Schreib uns</h2>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Dein Name" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Deine Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Deine Nachricht", row: 30 %>
        </div>
      </div>
    </div>
    <%= submit_tag "senden", class: 'btn btn-info' %>
<% end %>