$(document).on('turbolinks:load', function () {

    $(function() {

        window.cookieconsent_options = {
            message: 'Diese Website nutzt Cookies (auch von Drittanbietern), um bestmögliche Funktionalität bieten zu können.',
            dismiss: 'Ok, verstanden',
            learnMore: 'Mehr Infos',
            link: 'http://www.sporting-nerds.com/impressum',
            theme: 'light-floating'
        };

        $('.textarea').tinymce({
            plugins : 'advlist autolink link image lists charmap print preview imagetools textcolor colorpicker' +
            ' table media code',
            external_plugins: {
                "uploadimage": "<%= javascript_path('tinymce/js/tinymce/plugins/uploadimage/plugin.min.js') %>"
            },

            height: "500px",
            toolbar1: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright ' +
            'alignjustify  | bullist numlist outdent indent | link',
            toolbar2: "table | forecolor | backcolor | fontselect fontsizeselect | uploadimage media | code",
            font_formats: 'Roboto = Roboto, Helvetica, Arial, sans-serif',
            paste_data_images: true,
            image_class_list: [
                {title: 'Responsive', value: 'img-responsive'}
            ],
            imagetools_cors_hosts: ['sporting-nerds.com'],
            relative_urls: false,
            valid_elements : '*[*]'
        });
    });

    //Info and alerts fading out
    $('.alert').delay(2000).fadeOut(1500);

    // div dame height
    $('.card').matchHeight();

    //Bootstrap Carousel
    $(document).ready(function() {
        $('.carousel').carousel({
            interval: 1200
        })
    });



})



